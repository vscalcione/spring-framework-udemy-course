<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="demo.springframework.dependencyinjection" />

    <import resource="classpath:spring/helloworld-configuration.xml" />

    <!-- Creating bean greeting controller -->
    <bean id="greetingController" class="demo.springframework.dependencyinjection.controllers.GreetingController">
        <property name="helloWorldService" ref="helloWorldServiceDefault"/>
        <property name="helloWorldServiceFrench" ref="french"/>
        <property name="helloWorldServiceGerman" ref="helloWorldServiceGerman"/>
    </bean>

</beans>

